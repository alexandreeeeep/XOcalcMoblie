<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XOapp.Views.AboutPage"
             xmlns:vm="clr-namespace:XOapp.ViewModels"
             Title="{Binding Title}">
    <StackLayout Orientation="Horizontal" Padding="10" Spacing="30">
        <Label x:Name="ItemName1" Text="Item 1 Cost" />
        <Label Text="Item 1 amount"/>
        <Label x:Name="ItemName2" Text="Item 2 Cost"/>
        <Label Text="Item 2 amount"/>
        <Label x:Name="ItemName3" Text="Item 3 Cost"/>
        <Label Text="Item 3 amount"/>
    </StackLayout>
</ContentPage>
